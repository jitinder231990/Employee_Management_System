@model EmployeeModel
@{
    ViewBag.Title = "Add a Employee";
}

<h2>Add a Employee <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddEmployee" method="post">
    <div class="form-group">
        <label for="Name">Name:</label>
        <input class="form-control" name="Name" />
    </div>
    <div class="form-group">
        <label for="StartLocation">Email:</label>
        <input type="email" class="form-control" name="Email" />
    </div>
    <div class="form-group">
        <label for="EndLocation">Date of birth:</label>
        <input type="date" class="form-control" name="Dob" />
    </div>
    <div class="form-group">
        <label for="EndLocation">Department:</label>
        <input class="form-control" name="Department" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

@if (Model != null)
{
    <h2>Employee</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Date of birth</th>
                <th>Department</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.Id</td>
                <td>@Model.Name</td>
                <td>@Model.Email</td>
                <td>@Model.Dob.Value.ToShortDateString()</td>
                <td>@Model.Department</td>

            </tr>
        </tbody>
    </table>
}